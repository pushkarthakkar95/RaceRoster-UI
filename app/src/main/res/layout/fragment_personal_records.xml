<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.PersonalRecordsFragment">

        <TextView
            android:id="@+id/pageTitle"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:paddingLeft="@dimen/category_padding"
            android:text="@string/personal_records" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/personalRecyclerv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pageTitle"
            tools:listitem="@layout/achievement_item"/>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_navigate_next_24dp"
            android:layout_margin="@dimen/fab_margin" />

    </RelativeLayout>
</layout>
